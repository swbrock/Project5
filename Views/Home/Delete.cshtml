@{
    ViewData["Title"] = "Delete Movie";
}

@model MovieLists

<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete the record for @Model.Title?</h3>

@*This form allows the deletion of the selected movie based off its movieID*@
<form method="post" asp-controller="Home" asp-action="Delete">
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="MovieCollection" class="btn btn-primary">Cancel</a>

    <input type="hidden" asp-for="MovieId" />

</form>